extends layout

block content
  - var scoreboardXPosition = -2.5;
  - var scoreboardZPosition = -4.75;
  - var scoreboardYPosition = 0.7;
  - var scoreboardTextXPosition = scoreboardXPosition -1.75;
  - var scoreboardTextYPosition = scoreboardYPosition + 3.7;
  - var scoreboardTextZPosition = scoreboardZPosition + 0.06;
  <a-scene background="color: gray">
    <a-assets>
      //https://downloadfree3d.com/interior/lowpoly-vr-glasses/
      <a-asset-item id="vr_glasses" src="models/generic_vr_glasses.glb"></a-asset-item>
    </a-assets>

    //Überschrift
    <a-text rotation="45 0 0" position='-10 20 -20' value="Time waster Game" scale="10 10 10"> </a-text>
    //VR-Headset
    <a-gltf-model position="0 0 -10" rotation="0 -90 0" src="#vr_glasses"></a-gltf-model>
    //Ground
    <a-plane position="0 -5.5 0" width="100" height="100" rotation="-90 0 0" color="darkgreen"></a-plane>
    //House
    <a-box position="0 0 -15" width="10" height="10" depth="0.5" color="#8B4513"></a-box>
    <a-box position="0 -5 -10" width="10" height="10" depth="0.5" rotation="-90 0 0" color="#8B4513"></a-box>
    <a-box position="0 5 -10" width="10" height="10" depth="0.5" rotation="-90 0 0" color="#8B4513"></a-box>
    <a-box position="-5 0 -10" width="10" height="10" depth="0.5" rotation="0 -90 0" color="#8B4513"></a-box>
    <a-box position="5 0 -10" width="10" height="10" depth="0.5" rotation="0 -90 0" color="#8B4513"></a-box>
    <a-box position="0 4 -5" width="10" height="2" depth="0.5" color="#8B4513"></a-box>
    <a-box position="-2.5 -1 -5" width="5" height="8" depth="0.5" color="#8B4513"></a-box>
    <a-box position="4 -1 -5" width="2" height="8" depth="0.5" color="#8B4513"></a-box>
    
    //Scoreboard
    <a-box position='#{scoreboardXPosition} #{scoreboardYPosition} #{scoreboardZPosition}' color="grey" width="4" height="8" depth="0.1"></a-box>
    <a-text position='#{scoreboardTextXPosition} #{scoreboardTextYPosition} #{scoreboardTextZPosition}' value="Scoreboard in Minuten"></a-text>
    
    //Scoreboard init (Es entsteht ein unerklärlicher Bug sobald man diese Kommentarzeile löscht :) )
    - for (var i = 0; i < scoreboardList.length && i < 25; i++)
      <a-text value='#{i + 1} #{scoreboardList[i].gamertag}, #{scoreboardList[i].score}' position = '#{scoreboardTextXPosition} #{scoreboardTextYPosition - 0.3 - i * 0.3} #{scoreboardTextZPosition}'></a-text>
  </a-scene>